<Page x:Class="ItalianPicza.GUI_AgregarPedidoProveedor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:ItalianPicza"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="GUI_AgregarPedidoProveedor">

    <Grid Background="LightGray">
        <Rectangle HorizontalAlignment="Left" Height="721" Stroke="Black" VerticalAlignment="Center" Width="230" Fill="#231B1B"/>

        <Rectangle HorizontalAlignment="Left" Height="78" Margin="484,10,0,0" VerticalAlignment="Top" Width="607" Fill="#231B1B" RadiusX="25" RadiusY="25" Stroke="Maroon" StrokeThickness="5"/>
        <Label Content="Realizar pedido proveedor" HorizontalAlignment="Left" Height="44" Margin="600,26,0,0" VerticalAlignment="Top" Width="455" Foreground="White" FontFamily="Georgia" FontSize="32" FontWeight="Bold"/>
        <Image Source="/Imagenes/Iconos/order.png" Height="70" Width="70" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="507,13,0,0"/>
        <Button Content="Cancelar" Click="Cancelar" HorizontalAlignment="Left" Margin="751,648,0,0" VerticalAlignment="Top" Height="42" Width="221" FontSize="22" Background="Red" Foreground="#FFFAFAFA"/>
        <Button Content="Guardar" Click="GuardarPedido" HorizontalAlignment="Left" Margin="997,648,0,0" VerticalAlignment="Top" Height="42" Width="221" FontSize="22" Background="Green" Foreground="#FFFAFAFA"/>
        <ListView x:Name="lvProductos" Margin="248,193,432,138" Background="AliceBlue" >
            <ListView.Resources>
                <Style TargetType="{x:Type GridViewColumnHeader}">
                    <Setter Property="Background" Value="Black" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Style>
            </ListView.Resources>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nombre" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding nombre}" 
                                    Foreground="Black" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    FontSize="24" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!-- Name Column -->
                    <GridViewColumn Header="Cantidad disp." Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding cantidad}" 
                                    Foreground="Black" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    FontSize="24" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Status Column -->
                    <GridViewColumn Header="unidad medida" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding unidadMedida}" 
                                    Foreground="Black" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    FontSize="24" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Status Column -->
                    <GridViewColumn Header="Costo" Width="90">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock Text="$"
                                               Foreground="Black" 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center" 
                                               FontSize="24"/>
                                    <TextBlock Text="{Binding precio}" 
                                        Foreground="Black" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center" 
                                        FontSize="24" />
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Border CornerRadius="10,10,10,10" BorderBrush="white" BorderThickness="2,2,2,2" Width="66" Background="white">
                                        <TextBox    Height="19" Width="51" BorderBrush="White" TextChanged="cantidadProducto_TextChanged"/>
                                    </Border>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Border HorizontalAlignment="Left" Height="427"  VerticalAlignment="Center" Width="374" Background="Black" Margin="896,0,0,0" CornerRadius="16,16,16,16"/>
        <ListView x:Name="lvResumen" ItemsSource="{Binding ProductosResumen}" Margin="906,193,20,186" Background="Black">
            <ListView.Resources>
                <Style TargetType="{x:Type GridViewColumnHeader}">
                    <Setter Property="Background" Value="Black" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Producto" Width="175">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding nombre}" Foreground="White" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center" 
                                FontSize="16"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Cantidad" Width="55">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding cantidad}" 
                                    Foreground="White" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    FontSize="16" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Status Column -->
                    <GridViewColumn Header="Costo" Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding precio}" 
                                    Foreground="White" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    FontSize="16" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" Height="30">
                                    <Button Background="{x:Null}" BorderBrush="Black" Click="eliminarProducto" >
                                        <Image Source="Imagenes/Iconos/delete_icon.png" Height="24" Width="20">
                                        </Image>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>

        </ListView>
        <Label Content="Resumen" HorizontalAlignment="Left" Margin="1002,146,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="138" FontSize="30" Foreground="#FFFBD4" Height="47"/>
        <Label x:Name="etiquetaTotal" Content="Total:" HorizontalAlignment="Left" Margin="950,534,0,0" VerticalAlignment="Top" Width="150" FontSize="20" Foreground="White" Height="32"/>
        <ComboBox HorizontalAlignment="Left" Margin="248,155,0,0" VerticalAlignment="Top" Width="276" Height="29"/>
    </Grid>
</Page>