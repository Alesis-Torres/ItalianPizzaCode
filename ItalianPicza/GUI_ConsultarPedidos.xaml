<Page x:Class="ItalianPicza.GUI_ConsultarPedidos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItalianPicza"
      mc:Ignorable="d" 
      Title="GUI_ConsultarPedidos" Height="709" Width="1255">
    <Page.Resources>
        <Style TargetType="Button">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                    <Setter Property="Control.FontSize" Value="22px"/>
                    <Setter Property="Control.FontWeight" Value="Bold"/>
                    <Setter Property="Control.Foreground" Value="White"/>
                </Style>
            </Style.Resources>
        </Style>
    </Page.Resources>
    <Grid>
        <Rectangle Height="699" Margin="235,10,0,0" Stroke="Black" VerticalAlignment="Top" Fill="LightGray" HorizontalAlignment="Left" Width="1020"/>
        <ListView x:Name="lvPedidos" Margin="250,186,15,96" Background="White" SelectionChanged="lvPedidos_SelectionChanged" >
            <ListView.Resources>
                <Style TargetType="{x:Type GridViewColumnHeader}">
                    <!-- Estilo solo para esta tabla -->
                    <Setter Property="Background" Value="BLACK" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="FontSize" Value="22" />

                </Style>
            </ListView.Resources>
            <ListView.View>

                <GridView>
                    <GridViewColumn Header="" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <CheckBox IsChecked="{Binding IsSelected}" />
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!-- Name Column -->
                    <GridViewColumn Header="Estado" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding estado}" 
                                Foreground="Black" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                FontSize="18" 
                                          />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Tipo" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TipoPedido}" 
                                    Foreground="Black" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    FontSize="18" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Status Column -->
                    <GridViewColumn Header="Nombre" Width="300">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Detalle}" 
                                    Foreground="Black" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    FontSize="18" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Status Column -->
                    <GridViewColumn Header="Fecha realizacion" Width="185">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Fecha}" 
                                    Foreground="Black" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    FontSize="18" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Total" Width="125">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Cantidad}" 
                                    Foreground="Black" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    FontWeight="Bold"
                                    FontSize="18" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Columna con ambos botones (uno encima del otro) -->
                    <GridViewColumn Header="" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Button  Margin="20,0,0,20" Width="40" Height="40" Background="#00008B" Click="modificarPedido" >
                                        <Image Source="Imagenes\Logos\edit_icon.png"></Image>
                                    </Button>

                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>

        </ListView>
        <Grid HorizontalAlignment="Left" Height="87" Margin="250,24,0,0"   VerticalAlignment="Top" Width="103">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
        </Grid>
        <Label Content="Estado:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="103" FontSize="20" Foreground="White" Height="34" Margin="250,147,0,0"/>
        <Button x:Name="btnExpedirEntrega"  Visibility="Hidden"   Content="Expedir para entrega" HorizontalAlignment="Left" Margin="274,628,0,0" VerticalAlignment="Top" Height="57" Width="238"  Background="Green" BorderBrush="White" BorderThickness="2,2,2,2" Click="btnExpedirEntrega_Click"/>
        <Button x:Name="btnConfirmarEntrega" Visibility="Hidden" Content="Confirmar Entrega"  HorizontalAlignment="Left" Margin="978,628,0,0" VerticalAlignment="Top" Height="57" Width="238"   Background="Green" BorderBrush="White" BorderThickness="2,2,2,2" Click="btnConfirmarEntrega_Click"/>
        <Button x:Name="btnMarcarMerma" Visibility="Visible" Content="Considerar merma"  HorizontalAlignment="Left" Margin="274,628,0,0" VerticalAlignment="Top" Height="57" Width="238"   Background="Red" BorderBrush="White" BorderThickness="2,2,2,2" Click="btnConsiderarMerma_Click"/>
        <Button Content="Añadir pedido" Click="agregarPedido" HorizontalAlignment="Left" Margin="626,628,0,0" VerticalAlignment="Top" Height="57" Width="238"   Background="Green" BorderBrush="White" BorderThickness="2,2,2,2"/>
        <Border Margin="512,24,277,619" BorderBrush="Red" Background="black" BorderThickness="2,2,2,2" CornerRadius="30,30,30,30">
            <DockPanel>
                <Image Source="Imagenes\Logos\order_icon.png" Height="62" Width="76"/>
                <Label Content="Revisar pedidos del cliente" Height="50" Width="364" Foreground="White" FontWeight="Bold" FontSize="28"/>
            </DockPanel>

        </Border>
        <Button  HorizontalAlignment="Left" Margin="250,24,0,0" VerticalAlignment="Top" Height="66" Width="86" FontSize="22" Background="white" BorderBrush="Black" BorderThickness="2,2,2,2">
            <WrapPanel>
                <Image Source="Imagenes\Logos\return_pizza_icon.png" Height="33" Width="82"/>
                <Label Content="Regresar" Height="38" Width="80" Foreground="Black" FontWeight="Bold" FontSize="16" HorizontalContentAlignment="Center"/>
            </WrapPanel>
        </Button>
        <Button  HorizontalAlignment="Left" Margin="336,24,0,0" VerticalAlignment="Top" Height="66" Width="118" FontSize="22" Background="white" BorderBrush="Black" BorderThickness="2,2,2,2" Click="responsivaTest">
            <WrapPanel>
                <Label Content="Responsiva &#xD;&#xA;Test" Height="54" Width="96" Foreground="Black" FontWeight="Bold" FontSize="16" HorizontalContentAlignment="Center"/>
            </WrapPanel>
        </Button>
        <ComboBox x:Name="cbEstadoPedido" HorizontalAlignment="Left" Margin="327,159,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cbEstadoPedido_SelectionChanged" />
        <Button  HorizontalAlignment="Left" Margin="1190,129,0,0" VerticalAlignment="Top" Background="Black" Click="recargarListaPedidos">
            <Image Source="Imagenes\Iconos\Refresh cw.png" Height="48" Width="46"></Image>
        </Button>



    </Grid>

</Page>