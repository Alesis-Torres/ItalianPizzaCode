<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItalianPicza"
      x:Class="ItalianPicza.GUI_FormularioPedido"
      mc:Ignorable="d"
      Title="GUI_FormularioPedido" Height="711" Width="1256">
    <Page.Resources>
        <Style TargetType="{x:Type Button}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                    <Setter Property="Control.FontSize" Value="22px"/>
                    <Setter Property="Control.FontWeight" Value="Bold"/>
                    <Setter Property="Control.Foreground" Value="White"/>
                    <Setter Property="Control.Background" Value="Green"/>
                </Style>
            </Style.Resources>
        </Style>
    </Page.Resources>

    <Grid Background="LightGray">
        <Border Margin="246,26,586,573" BorderBrush="White" BorderThickness="2,2,2,2" CornerRadius="30,30,30,30" Background="black">
        </Border>

        <RadioButton x:Name="rbDomicilio"  Content="A domicilio" FontSize="20" Foreground="White"  Margin="360,30,758,655" GroupName="tipoPedido" Checked="rbDomicilio_Checked" />
        <RadioButton x:Name="rbLocal"  Content="Local" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Foreground="White" GroupName="tipoPedido" Checked="rbLocal_Checked" Margin="267,30,0,0" Width="70" />
        <TextBox x:Name="cuadroTextoProducto" HorizontalAlignment="Left" Margin="248,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="352" Height="34" MaxLength="50" FontSize="24" Text="Buscar..." />
        <Button Content="Cancelar" Click="Cancelar" HorizontalAlignment="Left" Margin="751,648,0,0" VerticalAlignment="Top" Height="42" Width="221" FontSize="22" Background="Red" Foreground="#FFFAFAFA"/>
        <Button Content="Guardar" Click="GuardarPedido" HorizontalAlignment="Left" Margin="997,648,0,0" VerticalAlignment="Top" Height="42" Width="221" FontSize="22" Background="Green" Foreground="#FFFAFAFA"/>
        <ListView x:Name="lvProductos" Margin="248,193,432,138" Background="AliceBlue" >
            <ListView.Resources>
                <Style TargetType="{x:Type GridViewColumnHeader}">
                    <Setter Property="Background" Value="Black" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Style>
            </ListView.Resources>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Codigo" Width="90">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding codigo}" 
                                    Foreground="Black" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    FontSize="24" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!-- Name Column -->
                    <GridViewColumn Header="Producto" Width="240">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding nombre}" 
                                    Foreground="Black" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    FontSize="24" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Status Column -->
                    <GridViewColumn Header="disponibles" Width="70">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding cantidad}" 
                                    Foreground="Black" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    FontSize="24" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Status Column -->
                    <GridViewColumn Header="Costo" Width="70">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock Text="$"
                                               Foreground="Black" 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center" 
                                               FontSize="24"/>
                                    <TextBlock Text="{Binding precio}" 
                                        Foreground="Black" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center" 
                                        FontSize="24" />
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Border CornerRadius="10,10,10,10" BorderBrush="white" BorderThickness="2,2,2,2" Width="66" Background="white">
                                        <TextBox    Height="19" Width="51" BorderBrush="White" TextChanged="cantidadProducto_TextChanged"/>
                                    </Border>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Border HorizontalAlignment="Left" Height="427"  VerticalAlignment="Top" Width="350" Background="Black" Margin="896,146,0,0" CornerRadius="16,16,16,16"/>
        <ListView x:Name="lvResumen" ItemsSource="{Binding ProductosResumen}" Margin="902,193,24,173" Background="Black">
            <ListView.Resources>
                <Style TargetType="{x:Type GridViewColumnHeader}">
                    <Setter Property="Background" Value="Black" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Producto" Width="175">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding nombre}" Foreground="White" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center" 
                                FontSize="16"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Cantidad" Width="55">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding cantidad}" 
                                    Foreground="White" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    FontSize="16" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Status Column -->
                    <GridViewColumn Header="Costo" Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding precio}" 
                                    Foreground="White" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    FontSize="16" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" Height="30">
                                    <Button Background="{x:Null}" BorderBrush="Black" Click="eliminarProducto" >
                                        <Image Source="Imagenes/Iconos/delete_icon.png" Height="24" Width="20">
                                        </Image>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>

        </ListView>
        <Label Content="Resumen" HorizontalAlignment="Left" Margin="1002,146,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="138" FontSize="30" Foreground="#FFFBD4" Height="47"/>
        <Label x:Name="etiquetaTotal" Content="Total:" HorizontalAlignment="Left" Margin="950,534,0,0" VerticalAlignment="Top" Width="150" FontSize="20" Foreground="White" Height="32"/>


        <Grid x:Name="gridLocal" Visibility="Hidden">
            <Label Content="Mesa:" HorizontalAlignment="Left" Margin="262,58,0,0" VerticalAlignment="Top"  Width="75" FontSize="20" Foreground="White" Height="32"/>
            <ComboBox x:Name="cbMesas"  Margin="337,68,799,0" VerticalAlignment="Top" Width="120"/>
        </Grid>

        <Button x:Name="botonEliminarPedido" Visibility="Hidden" Content="Eliminar pedido" Click="eliminarPedido" HorizontalAlignment="Left" Margin="246,648,0,0" VerticalAlignment="Top" Height="42" Width="229" FontSize="22" Background="Red" Foreground="#FFFAFAFA"/>

        <Grid x:Name="gridPedidoDomicilio" Margin="248,30,586,573" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="293*"/>
                <ColumnDefinition Width="130*"/>

            </Grid.ColumnDefinitions>
            <Label Content="Cliente:" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" FontSize="20" Foreground="White" Height="32" Margin="15,47,0,0"/>
            <Label Content="Domicilio:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" FontSize="20" Foreground="White" Height="32" Margin="15,72,0,0"/>
            <Label   Content="Telefono:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="102" FontSize="20" Foreground="White" Height="32" Margin="16,20,0,0"/>
            <!--Elementos telefono-->
            <ComboBox x:Name="cbNumeroTelefonico" Margin="110,27,96,60" 
                    IsEditable="True" Grid.ColumnSpan="2"
                   >
            </ComboBox>

            <ComboBox x:Name="cbDomicilio" Margin="110,79,96,8" 
                    IsEditable="True" Grid.ColumnSpan="2"
                    >
            </ComboBox>
            <ComboBox x:Name="cbCliente" Margin="110,53,96,34"
                    IsEditable="True" Grid.ColumnSpan="2"
                    >
            </ComboBox>
        </Grid>
    </Grid>
</Page>
